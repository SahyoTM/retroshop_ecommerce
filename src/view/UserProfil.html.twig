{% extends "BaseTemplate.html.twig" %}
{% block title %}User profil{% endblock %}
{% block content %}
<!-- user simple div profil with an edit button -->
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Profil of {{ user.username }}</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-9">
                            <p>Email : {{ user.email }}</p>
                            <p>Role : {{ user.role }}</p>
                        </div>
                    </div>
                </div>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editUserProfil">
                    Edit profil
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editUserProfil" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
<form action="/user-profil/edit" method="post">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit your profil</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="form-group">
            <label for="product_name">Change username</label>
            <input type="text" class="form-control" id="profil_username" name="profil_username" placeholder="Enter your username" value="{{ user.username }}">
        </div>
        <div class="form-group">
            <label for="password">Change email</label>
            <input type="text" class="form-control" id="profil_email" name="profil_email" placeholder="Enter your email" value="{{ user.email }}">
        </div>
        <div class="form-group">
            <label for="password">Change password</label>
            <input type="text" class="form-control" id="profil_password" name="profil_password" placeholder="Enter your new password">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Edit my profil</button>
      </div>
    </div>
  </div>
 
</form>
</div>


{% endblock %}